.header {
  width : 100%;
  text-align: center;
}
.header .title{
  width : 100%;
  margin-top : 20rpx;
  font-size : 28px;
  color : #666;
  font-weight: bold;
}

.header .sub-title{
  width : 100%;
  font-size : 10px;
  display : flex;
  flex-direction: row;
  color : #999;
}
.header .sub-title .time{
  text-align:center;
  width : 100%;
}

.content {
  padding : 30rpx 30rpx 30rpx 30rpx;
  font-size : 12px;
}

.join {
  width : 100%;
  bottom : 0;
  height : 118rpx;
  position : fixed;
}

.span {
  text-align : center;
  color : #999;
  font-size : 30rpx;
}

.operate{
  text-align:right;
  margin-right : 20rpx;
  margin-top : 20rpx;
  padding-bottom : 20rpx;
  font-size : 26;
  color : #406580;
}

.comments{

}

.comments .item {
  display : flex;
  flex-direction : row;
  width : 100%;
  position:relative;
}

.comments .item .avatar{
  width : 30%;
  text-align:center;
}

.comments .item .avatar image {
  width : 70%;
  border-radius : 20rpx;
  padding : 20rpx 20rpx 20rpx 20rpx;
}

.comments .item .comment{
  width : 70%;
  padding-left : 20rpx;
  padding-top : 20rpx;
  padding-right : 40rpx;
  padding-bottom : 100rpx;
  font-size : 30rpx;
  color : #555;
}
.comments .item .operate{
  position : absolute;
  right : 20rpx;
  bottom : 20rpx;
}